<html>
  <head>
    <title>Store edit</title>
  </head>
  <body>
    <h1>Update the name of {{ store.getStoreName }} </h1>

  <form action="/store/{{ store.getId }}" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="store_name">Rename your store:</label>
    <input id="store_name" name="store_name" type="text">

    <button type="submit">Update</button>
  </form>

  <p>
      <form action="/store/{{ store.getId }}" method="post">
          <input name="_method" type="hidden" value="delete">
          <button type="submit" class='btn btn-danger'>Delete this Store</button>
      </form>
  </p>
  </body>
</html>
