<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css'>
        <title>{{ store.getStoreName }}</title>
    </head>
    <body>
        <h1>{{ store.getStoreName }}</h1>
        {% if brands is not empty %}
            {% for brand in brands %}
            <li>{{ brand.getBrandName }}</li>
            {% endfor %}
        {% else %}
            This store doesn't sell any brands yet! Add a few!
        {% endif %}    

    <form action="/store/{{ store.getId }}" method="post">
        <input name"_method" type="hidden" value="patch">
        <label for="store_name">Edit the store name</label>
        <input id="store_name" name="store_name" type="text">
        <button type="submit" class='btn'>Update</button>
<p>
    <form action="/store/{{ store.getId }}" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class='btn btn-danger'>Delete this Store</button>
</p>
    </body>
</html>
